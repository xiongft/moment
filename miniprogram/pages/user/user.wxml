<view class="navigationHeight"></view>
<view class='header_border'></view>
<view class='currency edit_icon' bindtap='upload_type'>
  <view class='edit_text'>头像</view>
  <image class='icon' src='{{userImg}}' mode="aspectFill"></image>
  <image class='next_icon' src='/images/arrow.png'></image>
</view>
<view class='currency edit_nickname' data-edit='{{myUser.nickname}}' catchtap='edit_nickname'>
  <view class='edit_text'>昵称</view>
  <view class='edit_item'>{{nickname}}</view>
  <image class='next_icon' src='/images/arrow.png'></image>
</view>

